<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.theheat" name="The Heat" version="1.0.0" provider-name="leopheard">
  <requires>
    <import addon="xbmc.python" version="2.26.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.1"/>
    <import addon="script.module.requests" version="1.1.0"/>
    <import addon="script.module.routing" version="0.2.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language>en_us</language>
    <summary lang="en">The Heat</summary>
    <description lang="en">The Heat delves into one big news story every episode and breaks down how these stories impact people like you. We are talking to experts and journalists from around to world with the goal of bringing your perspectives based on first-hand accounts</description>
    <license>The MIT License (MIT)</license>
    <forum></forum>
    <email>leopheard@gmail.com</email>
    <source>https://github.com/leopheard/TheHeat</source>
    <website>https://america.cgtn.com</website>
        	<assets>
			<icon>resources/media/icon.jpg</icon>
			<fanart>resources/media/fanart.jpg</fanart>
			<screenshot>resources/media/1.jpg</screenshot>
			<screenshot>resources/media/2.jpg</screenshot>
			<screenshot>resources/media/icon.jpg</screenshot>
		</assets>
  </extension>
</addon>
